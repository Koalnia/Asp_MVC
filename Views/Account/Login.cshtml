@using Asp_MVC.Dto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginDto
@{
    ViewData["Title"] = "Demo ASP.NET MVC";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Demo Asp MVC</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>

    @await Html.PartialAsync("Navigation")

    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <h1>Strona logowania użytkownika</h1>
                <form asp-controller="Account" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">Rejestracja ukończona. Można się zalogować.</div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">Niepoprawne dane logowania.</div>
                    }

                    @if (TempData["Logout"] != null)
                    {
                        <div class="alert alert-info">Zostałeś wylogowany.</div>
                    }

                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Wpisz adres email" autofocus />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Hasło</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Wpisz hasło" autofocus />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6 col-sm-offset-3">
                                <input type="submit" name="login-submit"
                                       id="login-submit"
                                       class="form-control btn btn-primary"
                                       value="Log In" />
                            </div>
                        </div>
                    </div>

                </form>
                <div class="form-group">
                    <span>Nowy użytkownik? <a asp-controller="Account" asp-action="Register">Zarejestruj się tutaj</a></span>
                </div>
            </div>
        </div>
    </div>
</body>
</html>