@using Asp_MVC.Dto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AdvertisementCreationDto
@{
    ViewData["Title"] = "Update Advertisement";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Demo Asp MVC</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    @await Html.PartialAsync("Navigation")

    <br>
    <br>
    <br>
    <br>
    <div>
        <form asp-controller="Advertisement" asp-action="UpdateAdvertisement" asp-route-id="@Model.Id" method="post">
            <div class="form-group">
                <label class="control-label" asp-for="Title">Tytuł ogłoszenia</label>
                <input asp-for="Title" class="form-control" required autofocus />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="Description">Opis ogłoszenia</label>
                <input asp-for="Description" class="form-control" required autofocus />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="Price">Proponowana cena dotycząca ogłoszenia</label>
                <input asp-for="Price" class="form-control" required autofocus />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="Duration">Czas trwania dostępności ogłoszenia</label>
                <input asp-for="Duration" class="form-control" required autofocus />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Edytuj ogłoszenie</button>
            </div>
        </form>
    </div>
    @Html.AntiForgeryToken()
</body>
</html>